<h1>Editing team</h1>

<ul class='nav nav-tabs' role='tablist'>
<li class='active'><a href="#info" role='tab' data-toggle='tab'>Info</a></li>
  <% if current_user.managed_teams.include?(@team) %>
    <li><a href="#manage_hosts" role='tab' data-toggle='tab'>Manage Hosts</a></li>
  <% end %>
  <% if current_user.admin? %>
    <li><a href="#manage_admins" role='tab' data-toggle='tab'>Manage Team Admins</a></li>
  <% end %>
</ul>

<div class='tab-content'>
  <div class='tab-pane active' id="info">
    <%= render 'form' %>
  </div>

  <div class='tab-pane' id="manage_hosts">
    <%= render partial: 'manage_hosts' %>
  </div>

  <div class='tab-pane' id="manage_admins">
    <%= render partial: 'manage_admins' %>
  </div>
</div>

<%= link_to 'Show', @team %> |
<%= link_to 'Back', teams_path %>
