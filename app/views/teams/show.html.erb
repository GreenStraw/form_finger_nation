<style type="text/css">
body {overflow-x: hidden}
  .team_header{
    <% if @team.banner.present? %>
      background: url(<%= asset_path "#{@team.banner_url}" %>) no-repeat center center;
      background-size: cover;
      height: 468px;
    <% end %>
  }
</style>
  <div id="page-content-wrapper">
    <div class="container-fluid">
      <div class="r companylisting_header row">
        <div class="col-md-12 team_header">
          <!--button type="button" title="Upload Image" data-toggle="modal" data-target="#wallModal" class="btn btn-green"><i class="fa fa-upload"></i></button-->
          <div class='row'>
          <% if @team.banner.present? %>
         <% else %>
            <% if @team.address.latitude.present? && @team.address.longitude.present? %>
                <div id="map"></div>
            <% end 
          end %>
          </div>
        </div>
      </div>
      <div class="main-area team_show_page">
        <div class="row">
          <div class="follow companylisting">
            <div class="col-md-5 col-sm-6">
              <h2><%= "#{@team.name}" %></h2>
              <ul class="list-unstyled address">
                <li><%= @team.address.street %></li>
                <li><%= @team.address.city_state %></li>
                <li><%= link_to 'Visit Website', @team.website if @team.website %></li>
              </ul>
                <!-- <ul class="list-inline social_icon">
                  <li><a href="#">
                    <span class="fa-stack fa-1x">
                      <i class="fa fa-circle fa-stack-2x icon-background"></i>
                      <i class="fa fa-twitter fa-stack-1x"></i>
                    </span>
                  </a></li>
                  <li><a href="#">
                    <span class="fa-stack fa-1x">
                      <i class="fa fa-circle fa-stack-2x icon-background"></i>
                      <i class="fa fa-facebook fa-stack-1x"></i>
                    </span>
                  </a></li>
                  <li><a href="#">
                    <span class="fa-stack fa-1x">
                      <i class="fa fa-circle fa-stack-2x icon-background"></i>
                      <i class="fa fa-linkedin fa-stack-1x"></i>
                    </span>
                  </a></li>
                  <li><a href="#">
                    <span class="fa-stack fa-1x">
                      <i class="fa fa-circle fa-stack-2x icon-background"></i>
                      <i class="fa fa-google-plus fa-stack-1x"></i>
                    </span>
                  </a></li>
                </ul> -->
                <% if @team.upcoming_parties.any? %>
                  <h3 style=" font-weight: bold; font-size: x-large; ">Upcoming Watch Parties</h3>
                    <ul class="list-unstyled verifie_list">
                    <% @team.upcoming_parties.each do |party| %>
                      <div class="card">
                        <div class="cancle_icon">
                          <%= link_to '<i class="fa fa-times"></i>'.html_safe, party, method: :delete, data: { confirm: 'Are you sure?' } %>
                        </div>
                        <div class="holder" style="width: 100px; height:100px;">
                          <%= image_tag(party.image_url, class: "img-responsive") unless party.image_url.nil? %>
                        </div>
                        <div class="caption">
                          <%= link_to party do %>
                            <h3> <%= party.name %></h3><span><%= party.team.name %></span>
                          <% end %>
                          <!-- /////////////////////////check for verification///////////////// -->
                          <% if party.verified %>
                            <div class="verifie_caption">
                              <div class="image-holder">
                                  <img alt="No image" class="img-responsive" src="/assets/vendor/verified_logo.png" >
                                </div>
                              <strong class="title" style="font-size:9px;"><em>Verified</em></strong>
                            </div>
                          <% end %>
                          <!-- /////////////////////////////////end//////////////////////////// -->
                          <br>
                          <%= party.sponsor %>

                          <ul class="list-inline">
                            <li><%= party.scheduled_for.strftime("%A, %d %b %Y %l:%M %p") %></li>
                            <li><%= party.venue.name+"(#{party.venue.address.city})" %></li>
                          </ul>
                          <% if !party.description.nil? %>
                            <div class="party_desc"><p><%= party.description.truncate(40)  %></p></div>
                          <% end %>
                          <%# if reservations_include?(party, current_user) %>
                            
                          <%# else %>
                            <!-- <a href="#"  data-toggle="modal" data-target="#myModal" >RSVP</a> -->
                            
                          <%# end %>
                          <span class="prt_rsvp"> | </span>
                          <%= link_to "View Party Packages", party, class: "prt_rsvp" %>
                        </div>
                      </div>
                    <% end %>
                    </ul>
                <% else %>
                  <h2>No upcoming watch parties listed</h2>
                <% end %>
              </div>
              <div class="col-md-offset-2 col-md-5 col-sm-6">
                <h2>
                  <span class="fa-stack fa-1x">
                    <i class="fa fa-circle fa-stack-2x icon-background"></i>
                    <i class="fa fa-twitter fa-stack-1x"></i>
                  </span>
                  Keep Up With Us</h2>
                  <% if @team.twitter_name.present? && @team.twitter_widget_id.present? %>
                    <a class="twitter-timeline" href=<%= "https://twitter.com/#{@team.twitter_name}" %> data-widget-id=<%= "#{@team.twitter_widget_id}"%>><%= "Tweets by @#{@team.twitter_name}" %></a>
                  <% end %>
                </div>
              </div>
            </div>
            <%= link_to 'Sport', sport_path(@team.sport) %>
            <% if current_user.present? && current_user.can?(:edit, @team) %>
              | <%= link_to 'Edit', edit_team_path(@team) %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    
<div class=" ch_location myparties modal fade" id="wallModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body" id = "modalls">
        <h2>Upload Wall Photo</h2>
        <%= form_for(@team) do |f| %>
        <label>Banner Image</label>
        <%= f.file_field :banner, :required => true, :id => :banner_upload_field %>
        <%= f.submit "Upload Banner" ,class: "btn btn-green pull-right"%>
        <button type="button" class="btn btn-green pull-right" data-dismiss="modal" style="margin-right: 10px" >Close</button>
        <% end %>
      </div>
    </div>
  </div>
</div>


<script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    markers = handler.addMarkers(<%=raw @map_markers.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
    handler.getMap().setZoom(11)
  });
</script>

