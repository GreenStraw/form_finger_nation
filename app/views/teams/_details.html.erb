<div class='row'>
  <%= image_tag(@team.image_url, size: '200') %>
  <div class='pull-right' id='subscribe-star'>
    <% if current_user %>
      <% if (current_user.try(:followed_teams) || []).include?(team) %>
        <%= link_to(unsubscribe_team_path(team), remote: true, method: :put) do%>
          <i class='fa fa-star fa-4x'></i>
        <% end %>
      <% else %>
        <%= link_to(subscribe_team_path(team), remote: true, method: :put, id: 'subscribe-link') do%>
          <i class='fa fa-star-o fa-4x'></i>
          <i class='fa fa-star fa-4x'></i>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
<div class='row'>
  <h1><%= @team.name.upcase %></h1>
</div>
<div class='row'>
  <%= @team.address.street %><br>
  <%= @team.address.city_state %><br>
  <%= link_to 'Visit Website', @team.website if @team.website %>
</div>
