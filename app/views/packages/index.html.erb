  <div id="page-content-wrapper">
    <div class="container-fluid">
      <div class="sport_header  row">
        <div class="col-md-12">
          <div class="sport_caption col-md-4 pull-right ">
            <h2 class="form-title">Listing packages</h2>
          </div>
        </div>
      </div>
      <div class="main-area">
        <div class="row">
          <div class="follow">
            <div class="col-md-11">
              <h2 class="form-title">Packages</h2>
              <div class="table-responsive">
                <table class="table table-striped">
                  <thead>
                    <tr>
                      <th>Name</th>
                      <th>Description</th>
                      <th>Image url</th>
                      <th>Price</th>
                      <th>Active</th>
                      <th>Is public</th>
                      <th>Start date</th>
                      <th>End date</th>
                      <th>Venue</th>
                      <th>References</th>
                      <th colspan="3"></th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @packages.each do |package| %>
                    <tr>
                      <td><%= package.name %></td>
                      <td><%= package.description %></td>
                      <td><%= package.image_url %></td>
                      <td><%= package.price %></td>
                      <td><%= package.active %></td>
                      <td><%= package.is_public %></td>
                      <td><%= package.start_date %></td>
                      <td><%= package.end_date %></td>
                      <td><%= link_to 'Show', package %></td>
                      <td><%= link_to 'Edit', edit_package_path(package) %></td>
                      <td><%= link_to 'Destroy', package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
