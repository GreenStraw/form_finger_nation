  <div id="page-content-wrapper">
    <div>

      <div class="sport_header_overlay">
        <div class="sport_caption pull-right">
          <img src='<%= asset_path 'white_foam_finger_icon.png' %>'/>
          <span>Package</span>
        </div>
      </div>
        
      <div class="sport_header  row">
      </div>
      <div class="main-area">
        <div class="row">
          <div id='notice'>
            <%= render :partial => 'layouts/flash' , :locals => { :flash => flash } %>
          </div>
          <div class="follow">
            <div class="col-md-12">
              <ul class='nav nav-tabs' role='tablist'>
                <li class='active'><a href="#info" role='tab' data-toggle='tab'>Info</a></li>
                <li><a href="#party-packages" role='tab' data-toggle='tab'>Manage Party Assignment</a></li>
              </ul>
              <br>
              <div class='tab-content'>
                <div class='tab-pane active' id="info">
                  <%= render 'form' %>
                </div>
                <div class='tab-pane' id="party-packages">
                  <%= render partial: 'party_packages' %>
                </div>
              </div>
              <%= link_to 'Show', @package, class: "btn btn-green btn-success"  %> 
              <%= link_to 'Back', packages_path, class: "btn btn-green" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>



