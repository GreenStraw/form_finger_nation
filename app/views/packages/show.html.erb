<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @package.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @package.description %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag(@package.image_url,  size: '30') %>
</p>

<p>
  <strong>Price:</strong>
  <%= @package.price %>
</p>

<p>
  <strong>Venue:</strong>
  <%= @package.venue.name %>
</p>

<%= link_to 'Venue', venue_path(@package.venue) %>
<% if current_user.present? && current_user.can?(:edit, @package) %>
  | <%= link_to 'Edit', edit_package_path(@package) %>
  | <%= link_to 'Delete', @package, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
