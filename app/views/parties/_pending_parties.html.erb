          <% if party_pending.present? %>
            <%= render partial: 'card', locals: {party: party_pending, from: 'verify_pending'} %>
          <% end %>
          
      </div> <!-- END padding -->

        <div class="bottom">

          <!--div class="float-left">
            <%# if party_pending.present? %>
              <%#= render partial: 'social_media', locals: {party: party_pending, from: 'verify_pending'} %>
            <%# end %>
          </div-->

          <% if party_pending.present? %>
            <div class="edit-card-text">
                <%= render partial: 'manage_party', locals: {party: party_pending, from: 'verify_pending', spotsLeft: @spotsLeft} %>
            </div>
          <% end %>

        </div>
    </div>

  <% end %>
<% end %>
