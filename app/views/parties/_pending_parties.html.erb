<% c = 0 %>
<% @pending_parties.each do |party_pending| %>

<% if party_pending.party.organizer_id != current_user.id %>
    <% if c % 3 == 0 %>
      <div class=" ">
    <% end %>
    <% c = c + 1 %>
    <div class="col-sm-6 col-md-4 add_rsvp_party">  
      <div class="card">

        <div class="padding">

          <div class="holder">
            <%= image_tag(party_pending.party.image_url, class: "img-responsive center") unless party_pending.party.nil? || party_pending.party.image_url.nil? %>
          </div>

          <div class="caption">
            <%= link_to party_pending.party do %>
              <h3> <%= party_pending.party.name rescue "" %> </h3>
              <% if Party.exists?(party_pending.party_id) %>
                <% if party_pending.party.verified %>
                  <div class="verifie_caption" id="rsvparty-verified-<%= party_pending.party.id %>">
                <% else %>
                  <div class="verifie_caption" id="rsvparty-verified-<%= party_pending.party.id %>" style="display:none">    
                <% end %>
                    <div class="image-holder">
                      <img alt="No image" class="img-responsive" src="/assets/vendor/verified_logo.png" >
                    </div>
                    <strong class="title" style="font-size:9px;"><em>Verified</em></strong>
                  </div>
              <% end %>
            <% end %>
            <br>
            <%= party_pending.party.sponsor if party_pending.party.present? %>
            <ul class="list-inline ">
              <li><%= party_pending.party.scheduled_for.strftime("%A, %d %b %Y %l:%M %p") rescue "" %></li>
              <li><%= party_pending.party.venue.address.city_state rescue "" %></li>
            </ul>
          </div> <!-- END caption -->

          <% if party_pending.party  %>
            <% if !party_pending.party.description.nil? %>
              <div class="party_desc">
                <p><%= party_pending.party.description.truncate(40) rescue "" %></p>
              </div>
            <% end %>
          <% end %>

          </div> <!-- END padding -->

          <div class="bottom">

            <div class="inline-block">
              <% if party_pending.party.present? %>
                <%= render partial: 'social_media', locals: {party: party_pending.party} %>
              <% end %>
            </div>

            <div class="inline-block edit-card-text">

              <% if current_user.id == 36 ||  current_user.id == 1 %>
                <span class="prt_rsvp"> | </span>
                <span id="rsvparty-<%= party_pending.party.id %>">
                  <% if party_pending.party.verified? %>
                    <%= link_to( "Verified", unverify_party_path(party_pending.party), class: "prt_rsvp", remote: true, method: :put)%>
                  <% else %>
                    <%= link_to("Verify", verify_party_path(party_pending.party), class: "prt_rsvp", remote: true, method: :put)%>
                  <% end %>
                </span>
              <% end %>
            </div>


            
          </div>
      </div>
    </div>
    <% if c % 3 == 0 || @pending_parties.count == c %>
      </div>
    <% end %>

  <% end %>
<% end %>
