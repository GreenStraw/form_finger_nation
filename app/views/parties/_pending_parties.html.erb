<% c = 0 %>
<% @pending_parties.each do |party_pending| %>

<% if party_pending.organizer_id != current_user.id %>
    <% if c % 3 == 0 %>
      <div class=" ">
    <% end %>
    <% c = c + 1 %>
    <div class="col-sm-6 col-md-4 add_rsvp_party">  
      <div class="card">

        <div class="padding">

            <% if party_pending %>
              <%= render partial: 'card', locals: {party: party_pending} %>
            <% end %>
            
        </div> <!-- END padding -->

          <div class="bottom">

            <div class="inline-block">
              <% if party_pending %>
                <%= render partial: 'social_media', locals: {party: party_pending} %>
              <% end %>
            </div>

            <div class="inline-block edit-card-text">
              
              <% if current_user.admin? %>
                <%= link_to "Party Packages", "venues/#{party_pending.venue.id}/edit", class: "prt_rsvp" %>
                <span class="prt_rsvp"> | </span>
              <% end %>

              
              <% if current_user.admin? || current_user.has_role?(:manager, :any) || current_user.has_role?(:venue_manager, :any)%>
                <span id="rsvparty-<%= party_pending.id %>">
                  <% if party_pending.verified? %>
                    <%= link_to( "Verified", unverify_party_path(party_pending), class: "prt_rsvp", remote: true, method: :put)%>
                  <% else %>
                    <%= link_to("Verify", verify_party_path(party_pending), class: "prt_rsvp", remote: true, method: :put)%>
                  <% end %>
                </span>
              <% end %>

            </div>

          </div>
      </div>
    </div>
    <% if c % 3 == 0 || @pending_parties.count == c %>
      </div>
    <% end %>

  <% end %>
<% end %>
