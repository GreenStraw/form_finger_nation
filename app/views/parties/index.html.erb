<div id="wrapper">
  <%= render "layouts/black_side" %>
  <div id="page-content-wrapper">
    <div class="container-fluid">
      <div class="banner row">
       <div class="mobile_header  ">
        <a href="#menu-toggle" class="btn btn-default pull-left " id="menu-toggle"><i class="fa fa-bars"></i> </a>
        <div class="logo pull-right">
          <%= link_to(image_tag("vendor/logo2.png"), root_path, alt: "FFN") %>
        </div>
      </div>
      <div class="input-area row col-md-offset-1 col-md-10">
        <div class="right-inner-addon ">
          <input type="search" class="form-control" placeholder="Search..." id="searchbox">
          <button class="btn btn-default" type="button" id = "searchButton"><i class="fa fa-search fa-6"></i></button>
        </div>
        <div class="btn-group hidden">
          <button class="btn btn-gray btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
            Filter<span class="caret"></span>
          </button>
          <ul class="dropdown-menu pull-right slide-box" role="menu">
            <li>
              <div class="col-md-4">
                <h4>Miles from you</h4>
              </div>
              <div class="col-md-8 ">
                <span class="pull-right">50</span>
                <%= text_field_tag "ex1", nil, type: 'text',
                data: {'slider-id' => 'ex1Slider',
                  'slider-min' => '0',
                  'slider-max' => '50',
                  'slider-step' => '1' }
                  %>
                </div>
              </li>
              <div class="clearfix"></div>
              <li>
                <div class="col-md-4">
                  <h4>RSVP number</h4>
                </div>
                <div class="col-md-8 ">
                  <span class="pull-right">100</span>
                  <%= text_field_tag "ex2", nil, type: 'text',
                  data: {'slider-id' => 'ex2Slider',
                    'slider-min' => '0',
                    'slider-max' => '100',
                    'slider-step' => '1' }
                    %>
                  </div>
                </li>
                <div class="clearfix"></div>
                <li>
                  <div class="col-md-4">
                    <h4>Teams</h4>
                  </div>
                  <div class="col-md-8 mt15">
                    <input type="radio" name="iCheck"> <label>Your Favorites</label>
                    <input type="radio" name="iCheck" checked> <label>Other Teams</label>
                  </div>
                </li>
              </ul>
            </div>
          </div>
          <div class="clearfix"></div>
          <div class="row caption">
            <div class="col-sm-7 col-md-7 col-lg-7 box-hide">
              <%= image_tag "vendor/banner_img.png", class: "img-responsive", alt: "icon" %>
            </div>
            <div class="col-sm-12 col-md-5 col-lg-5">
              <h1 id="p_heading">PARTIES</h1>
              <p>Keep track of when and where you
                may have to start a bar fight</p>
                <%= link_to "Find More Parties", search_parties_path, class: "btn btn-primary" %>
              </div>
            </div>
          </div>
          <div class="main-area">
            <div class="row">
              <div id='notice'>
                <%= render :partial => 'layouts/flash' , :locals => { :flash => flash } %>
              </div>
            </div>
            <ul class="nav nav-pills">
              <li role="presentation" class=""><a href="#"><h4>TEAMS</h4></a></li>
              <% @teams.try(:each) do |team| %>
                <li role="presentation"><%= link_to team.name, get_team_parties_parties_path(team: team.id), remote: true %></a></li>
              <% end %>
            </ul>
          </div>
          <div class="clearfix"></div>
            <div class="product_area">
              <% @c = 0 %>
              <div class="row">
                <span id="create_parties">
                  <%= render "created_parties" %>
                </span>
                <span id="rsvp_party">
                  <%= render "rsvp_parties" %>
                </span>
              </div>
              <!-- 
              <div class="row hidden_p" id="wparties">
                <%#= render "created_parties" %>
                <%#= render "rsvp_parties" %>
              </div> -->
              <div class="col-md-12 text-center footer">Can't find what you're looking for? <strong><%= link_to "Create your own watch party", cant_find_parties_path %></strong></div>
            </div>
          </div>
        </div>
      </div>

<script>
$("#searchbox").keyup(function(e){
  if(e.keyCode == 13)
  {
    var keyword = $("#searchbox").val();
     $.ajax({
      url: "/parties/ajaxsearch",
      type: "GET",
      data: { "keyword": keyword },
      dataType: 'script',
      success: function(resp){ 
        console.log(resp);
      }
    });
  }
});
$("#searchButton").click(function(e){
  var keyword = $("#searchbox").val();
   $.ajax({
    url: "/parties/ajaxsearch",
    type: "GET",
    data: { "keyword": keyword },
    dataType: 'script',
    success: function(resp){ 
    }
  });
});

</script>