<div id="page-content-wrapper">
  <div class="container-fluid">
    <div class="sport_header_overlay">
      <div class="sport_caption pull-right">
        <img src='<%= asset_path 'white_foam_finger_icon.png' %>'/>
        <span>Invite Friends</span>
      </div>
    </div>
    <div class="sport_header  row">
    </div>
    <div class="main-area">
      <div class="row">
        <div id='notice'>
          <%= render :partial => 'layouts/flash' , :locals => { :flash => flash } %>
        </div>
        <div class="follow">
          <div class="col-md-8">
            <%= form_for "invites", url: send_invites_path(@party.friendly_url) do |f| %>
              <div id="InputsWrapper">
                <div class="form-group">
                  <%= f.label :emails %><br>
                  <%= f.text_field :email_1, class: "form-control" %>
                </div>
              </div>

              <div class="form-group">
                <%= link_to "Add Another", "#", id: "add-email", class: 'btn btn-sm btn-primary' %>
              </div>

              <div class="actions">
                <%= f.submit "Send Invites", class: 'btn btn-success pull-right' %>
              </div>
            <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
</div>

