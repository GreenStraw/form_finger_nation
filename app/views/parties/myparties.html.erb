<div id="wrapper">
  <div id="sidebar-wrapper">
    <ul class="sidebar-nav">
      <li class="sidebar-brand">
        <div class="logo">
          <%= link_to(image_tag("vendor/logo2.png"), root_path) %>
        </div>
      </li>
      <li class="profile-area">
        <div class="image-holder">
          <% if current_user && current_user.image_url.present? %>
            <%= image_tag current_user.image_url, class: "img-responsive" %>
          <% else %>
            <%= image_tag "vendor/profile.png", class: "img-responsive"%>
          <% end %>
        </div>
        <span class="user_name">
          <strong><a href="#"><%= current_user.first_name + " " + current_user.last_name %></a></strong>
        </span>
        <span class="sign_up">
            <%= link_to n_sign_up_path do %>
              <i class="fa fa-user"> Not You? Sign Up</i>
            <% end %>
        </span>
        <span class="Settings">
          <a href="#"></a>
          <%= link_to '<i class="fa fa-cog"></i>Settings'.html_safe, account_path %>
        </span>
      </li>
      <li>
        <a href="#"><i class="fa fa-map-marker"></i>Austin, TX  <small>(change)</small></a>
      </li>
      <li class="Watch_Parties">
        <a href="#"><i class="fa fa-desktop"></i><strong>Watch Parties</strong> </a>
        <ul class="my_Parties">
          <li><a href="#my_parties" class="my_party active_p">My Parties</a></li>
          <li><a href="#RSVPs" class="my_party">RSVPs</a></li>
        </ul>
      </li>
      <li>
        <!-- <img src="images/hand_icon.png"> -->
        <%= link_to '<i class="fa fa-hand-o-up"></i>Your Teams'.html_safe, teams_path %>
      </li>
      <div class="clearfix"></div>
      <%= link_to( t("Create a Watch Party", :default => "Create Watch Party"), new_party_path, class: "btn btn-green btn-default" ) %>
    </ul>
  </div>
  <div id="page-content-wrapper">
    <div class="container-fluid">
      <div class="banner row">
          <!-- <div class="mobile_header  ">

          <a href="#menu-toggle" class="btn btn-default pull-left " id="menu-toggle"><i class="fa fa-bars"></i> </a>
          <div class="logo pull-left">
          <img src="images/logo2.png" class="img-responsive">
          </div>

        </div> -->
        <div class="input-area row col-md-offset-1 col-md-10">
          <div class="right-inner-addon ">
            <i class="fa fa-search fa-6"></i>
            <input type="search" class="form-control" placeholder="">
          </div>

          <!-- Small button group -->
          <div class="btn-group">
            <button class="btn btn-gray btn-default btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
              Filter<span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li><a href="#">RSVPs</a></li>
              <li><a href="#">RSVPs</a></li>
              <li><a href="#">RSVPs</a></li>
              <li><a href="#">RSVPs</a></li>

            </ul>
          </div>

        </div>
        <div class="clearfix"></div>
        <div class="row caption">
          <div class="col-sm-7 col-md-7 col-lg-7">
            <%= image_tag "vendor/banner_img.png", class: "img-responsive", alt: "icon" %>
          </div>
          <div class="col-sm-4 col-md-4 col-md-4">
            <h1>MY PARTIES</h1>
            <p>Keep track of when and where you
              may have to start a bar fight</p>
              <%= link_to "Find More Parties", search_parties_path, class: "btn btn-primary" %>
            </div>
          </div>
        </div>
        <div class="main-area">
          <ul class="nav nav-pills">
            <li role="presentation" class=""><a href="#">TEAMS</a></li>
            <li role="presentation"><a href="#">Dallas Cowboys</a></li>
            <li role="presentation"><a href="#">Texas Longhorns</a></li>
            <li role="presentation"><a href="#">San Antonio Spurs</a></li>
            <li role="presentation"><a href="#">Dallas Stars</a></li>                  </ul>
          </div>
          <div class="clearfix"></div>
          <div class="product_area">
            <div class="row" id="create_parties">
              <%= render "created_parties" %>
            </div>
            <div class="row hidden_p" id="rsvp_party">
              <%= render "rsvp_parties" %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script>
      $("#menu-toggle").click(function(e) {
        e.preventDefault();
        $("#wrapper").toggleClass("toggled");
      });
    </script>