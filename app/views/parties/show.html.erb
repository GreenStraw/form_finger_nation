    <div class="main-area">
      <div class="row">
        <div id='notice'>
          <%= render :partial => 'layouts/flash' , :locals => { :flash => flash } %>
        </div>
        <div class="follow companylisting ">
          <!--div class="col-md-7 col-sm-6 col-xs-12">
