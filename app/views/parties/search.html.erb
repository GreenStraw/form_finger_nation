  <div id="page-content-wrapper">
    <div class="container-fluid">
      <div class="sport_header  row">
        <div class="col-md-12">
          <div class="sport_caption col-md-4 pull-right ">
            <h2 class="form-title">Search Parties</h2>
          </div>
        </div>
      </div>
      <div class="main-area">
        <div class="row">
          <div class="follow">
            <div class="col-md-4">
              <%= form_for :search, url: search_parties_path, remote: true, method: :get do |f| %>
                <div class="form-group">
                    <%= text_field "party","search_item", class: 'form-control input-lg', placeholder: "Team or Venue", value: params[:party].blank? ? "" : params[:party][:search_item] %>
                </div>
                <div class="form-group">
                  <div id="search-where">
                    <%= text_field "party","search_location", class: "form-control input-lg", placeholder: "City, State, or Zip", value: params[:party].blank? ? "" : params[:party][:search_location] %>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.submit "Go", :class=>"btn btn-success"%>
                </div>
              <% end %>
            </div>
            <div class="col-md-7">
              <%= render partial: 'search_results' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>