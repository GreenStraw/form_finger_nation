<h3>Available Packages</h3>
<table>
  <% @party.packages.each do |package| %>
    <% @party_package = PartyPackage.where(party_id: @party.id, package_id: package.id).first%>
    <tr>
      <td><%= image_tag(package.image_url, size: '30') unless package.image_url.blank? %></td>
      <td><b><%= package.name %></b></td>
	  <td><%= number_to_currency(package.price)%></td>
    </tr>
    <tr>
      <td></td>
	  <td><%= link_to "More Information", package%></td>
	  <td><%= link_to "Purchase", purchase_package_path(party_package_id: @party_package.id)%></td>
    </tr>
  <% end %>
</table>