

  <div class="cancle_icon">
    <%#= link_to '<i class="fa fa-times"></i>'.html_safe, party, method: :delete, data: { confirm: 'Are you sure?' } %>
    <% if party.verified? %>
        <img src="/assets/vendor/verified_logo.png" title="party verified" alt="verified" class="img-responsive center">
      <%# else %>
        <%#= link_to("Verify", verify_party_path(party), class: "prt_rsvp", remote: true, method: :put)%>
    <% end %>
  </div>

  <div class="holder">
     test<%= asset_path('placeholder.png') %>

    <% !party.image_url.nil? %>
      <%= image_tag(party.image_url, class: "img-responsive center") %>
    <% else %>
      <img src="/assets/placeholder.png" title="party verified" alt="verified" class="img-responsive center">
    <% end %>
  </div>
  
  <div class="caption">
    <%= link_to party do %>
      <h3> <%= party.name rescue "" %> </h3>
    <% end %>
    <br/>
    <%= party.sponsor if party.present? %>


    <ul class="list-inline ">
      <li><%= party.scheduled_for.strftime("%A, %d %b %Y %l:%M %p") rescue "" %></li>
      <li><%= party.venue.address.city_state rescue "" %></li>
    </ul>
  </div> <!-- END caption -->

  <% if party.present?  %>
    <% if !party.description.nil? %>
      <div class="party_desc">
        <p><%= party.description.truncate(40) rescue "" %></p>
      </div>
    <% end %>
  <% end %>