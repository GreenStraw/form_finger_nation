 

<% packages.each do |package| %>

        <div style="background-color: #f9f9f9;
            width: 300px;
            cursor: pointer;
            box-shadow: 0 4px 10px 0 rgba(0,0,0,0.2), 0 4px 20px 0 rgba(0,0,0,0.19);
            float: left;
            height: 180px;
            color: #000;
            position: relative;
            display: inline-block; margin: 2%">

            <div class="padding" style="padding: 1%;">

                  <div class="holder" style="float: left; padding: 10px;">
                    <% if !package.image_url.nil? %>

                      <%= image_tag(package.image_url.thumb, class: "img-responsive center") %>

                    <% else %>

                      <img alt="Placeholder" class="img-responsive center" src="/assets/placeholder-48fa3ed0cb9d3fdedc0b91ad30a9f61e.png" 
                      style="max-width: 95% !important;
                      height: 55px;
                      border-radius: 50%;
                      overflow: hidden;">

                    <% end %>
                  </div>
                  
                  <div class="caption">
                    <a href="/parties/dallas-home">
                      <h3> <%= package.name %> </h3>
                    </a>    
                    <br/>
                    
                    <p style="padding-left: 10px; margin: 0;">
                      <%= package.description.truncate(40) rescue "" %>
                    </p>
                  </div> <!-- END caption -->
              </div> <!-- END padding -->

              <div class="bottom">
                <div class="inline-block" style="    bottom: 0;
            position: absolute;
            padding: 15px; ">
                  <a class="btn btn-green btn-default" href="/parties/search">Redeem</a>
                  <% unless package.voucher.redeemed_at.blank? %>
                    <a href="#" class="btn btn-green btn-default" onclick="return false;">Redeemed</a>
                  <% else %>
                    <%= link_to "Redeem", redeem_voucher_path(package.voucher.id), class: "btn btn-green btn-default",  data: { confirm: 'Are you sure you want to mark this voucher redeemed? It cannot be undone!' } %>
                  <% end %>
                </div>
                <span style="bottom: 0;
            position: absolute;     right: 0;
    padding: 20px;">$<%= package.price %></span>
              </div> <!-- END Bottom -->
        </div>

<% end %>