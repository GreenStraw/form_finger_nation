<%= form_for(@voucher) do |f| %>
  <% if @voucher.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@voucher.errors.count, "error") %> prohibited this voucher from being saved:</h2>

      <ul>
      <% @voucher.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.hidden_field :user_id %><br>
    <%= f.hidden_field :user_id, value: current_user.username, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.hidden_field :package_id %><br>
    <%= f.hidden_field :package_id, value: package_selects(@venue.id, @package.id), class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :party_id %><br>
    <%= f.select :party_id, party_selects(@venue.id), {} ,class: "form-control" %>
  </div>

  <div class="actions">
    <%= link_to 'Back', vouchers_path, class: "btn btn-default" %>
    <%= f.submit class: "btn btn-success" %>
  </div>
<% end %>
