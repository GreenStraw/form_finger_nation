<% parties.each do |party| %>
  <div class='well'>
    <div class='row'>
      <div class='col-xs-3'>
        <%= image_tag(party.team.image_url, size: '80') unless party.team.nil? %>
      </div>
      <div class='col-xs-5 pull-right'>
        <div class='row'>
          <h4><%= party.name %></h4>
          <% if party.verified %>
            <div class="verifie_box">
              <strong class="title"><em>Verified</em></strong>
            </div>
          <% end %>
          <div>
            <span class='fa fa-clock-o'/> <%= party.scheduled_for %> |
            <span class='fa fa-user'/> <%= party.attendees.count %>
          </div>
        </div>
        <div class='row'>
          <div class='pull-left'>
            <%= party.team.name %>
          </div>
          <div class='pull-right'>
            <%= link_to 'MORE INFO', party_path(party), class: 'btn btn-success btn-xs' %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
