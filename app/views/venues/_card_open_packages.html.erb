
<h2 class="right-header-packages">Specials</h2> 

<% packages.each do |package| %>

  <% if package.for_everyone? %>

        <div class="card-package">

            <div class="padding">

                  <div class="holder">
                    
                    <% if !package.image_url.blank? %>

                      <%= image_tag(package.image_url.thumb, class: "img-responsive center", title: "package image") %>

                    <% else %>
                      
                      <img src='<%= asset_path 'beer-flat.png' %>' title="package image" alt="package" class="img-responsive center"/>

                    <% end %>
                  </div>
                  
                  <div class="caption">
                      <h3> <%= package.name %> </h3>

                      <br/>
                    
                    <p class="description">
                      <%= package.description.truncate(40) rescue "" %>
                    </p>
                  </div> <!-- END caption -->
            </div> <!-- END padding -->

            <div class="bottom">
                
              <!--div class="inline-block" style="    bottom: 0;
                  position: absolute;
                    padding: 15px; ">
                <a class="btn btn-green btn-default" href="/parties/search">Redeem</a>
              </div-->

              <% if package.price > 0 %>
                    <span style="bottom: 0;
                    position: absolute; right: 0;
                    padding: 20px;">$<%= package.price %></span>
              <% end %>

            </div> <!-- END Bottom -->
        </div>

  <% end %>

<% end %>