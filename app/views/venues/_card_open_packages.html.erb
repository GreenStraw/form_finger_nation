
<h2 class="right-header-packages">Specials</h2> 

<% packages.each do |package| %>

  <% if package.for_everyone? %>

        <div class="card-package">

            <div class="padding">

                  <div class="holder">

                    <% if !package.image_url.nil? %>

                      <%= image_tag(package.image_url.thumb, class: "img-responsive center") %>

                    <% else %>

                      <img alt="Placeholder" class="img-responsive center" src="/assets/beer-flat.png">

                    <% end %>
                  </div>
                  
                  <div class="caption">
                      <h3> <%= package.name %> </h3>

                      <br/>
                    
                    <p class="description">
                      <%= package.description.truncate(40) rescue "" %>
                    </p>
                  </div> <!-- END caption -->
            </div> <!-- END padding -->

            <div class="bottom">
                
              <!--div class="inline-block" style="    bottom: 0;
                  position: absolute;
                    padding: 15px; ">
                <a class="btn btn-green btn-default" href="/parties/search">Redeem</a>
              </div-->

              <span style="bottom: 0;
                    position: absolute; right: 0;
                    padding: 20px;">$<%= package.price %></span>

            </div> <!-- END Bottom -->
        </div>

  <% end %>

<% end %>