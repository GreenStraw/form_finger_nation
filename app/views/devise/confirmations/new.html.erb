<div id="page-content-wrapper">
  <div class="container-fluid">
    <div class="sport_header  row">
      <div class="col-md-12">
        <div class="sport_caption col-md-4 pull-right ">
          <h2 class="form-title">Resend confirmation instructions</h2>
        </div>
      </div>
    </div>
    <div class="main-area">
      <div class="row">
        <div id='notice'>
          <%= render :partial => 'layouts/flash' , :locals => { :flash => flash } %>
        </div>
        <div class="follow">
          <div class="col-md-8">
            <%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :class => "form login" }) do |f| %>

              <%= devise_error_messages! %>

              <div class="input-group">
                <span class="input-group-addon">U</span>
                <%= f.text_field :email, :class => "form-control", :placeholder =>'Email Address' %>
              </div>
              </br>
              
              <div class="input-group">
                <button class="btn btn-primary" type="submit">Resend</button>
              </div>
              </br>

            <% end %>

            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
</div>
