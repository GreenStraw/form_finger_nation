<div id="page-content-wrapper">
  <div>

    <div class="sport_header_overlay">
      <div class="sport_caption pull-right ">
        <img src='<%= asset_path 'white_foam_finger_icon.png' %>'/>
        <span>Create password</span>
      </div>
    </div>

    <div class="sport_header  row">
    </div>
    <div class="main-area">
      <div class="row">
        <div id='notice'>
          <%= render :partial => 'layouts/flash' , :locals => { :flash => flash } %>
        </div>
        <div class="follow">
          <div class="col-md-8">
            <%= form_for(resource, :as => resource_name, :url => update_user_confirmation_path, :html => { :method => 'put',  :class => "form login" }) do |f| %>

                <%= devise_error_messages! %>

                  <%= hidden_field_tag :confirmation_token, @confirmation_token %>

                  <div class="input-group">
                    <span class="input-group-addon">P</span>
                    <%= f.password_field :password, :class => "form-control", :placeholder =>'Password' %>
                  </div>
                </br>

                <div class="input-group">
                  <span class="input-group-addon">P</span>
                  <%= f.password_field :password_confirmation, :class => "form-control", :placeholder =>'Password Confirmation' %>
                </div>
              </br>

              <div class="input-group">
                <button class="btn btn-primary" type="submit">Create</button>
              </div>
              </br>

            <% end %>

            <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
</div>
</div>
</div>
</div>
</div>

