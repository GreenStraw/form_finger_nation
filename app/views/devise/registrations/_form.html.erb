<%= form_for(@user, :url => account_path, method: :post, :html => { :class => "form login signup-form" }) do |f| %>

  <div class="input">
    <%= f.text_field :username, :class => "form-control #{'error' if @user.errors[:username]}", :placeholder =>'Username' %>
  </div>
  </br>

  <div class="input">
    <%= f.text_field :email, :class => "form-control", :placeholder =>'Email Address' %>
  </div>
  </br>

  <div class="input">
    <%= f.password_field :password, :class => "form-control", :placeholder =>'Password' %>
  </div>
  </br>

  <div class="input">
    <%= f.password_field :password_confirmation, :class => "form-control", :placeholder =>'Password confirmation' %>
  </div>
  </br>

  <div class="input">
    <%= f.label 'Requested Role (Please use Sports Fan unless you are a Venue Manager or Alumni Group Coordinator )' %>
    <%= f.select :requested_role, User::REQUESTED_ROLES %>
  </div>
  </br>

  <div class="input">
    <button class="btn green-btn" type="submit">Sign up</button>
  </div>
<% end %>
</br>
