html { 
  background: url("<%= asset_path 'Landing_bg.jpg'  %>") no-repeat center center fixed; 
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}
body{
    margin-top:0 !important;
    font-size: 16px;
    color: #fff;
  }
   .main_wrapper{
position: relative;
}
  .main_wrapper img{
    width: 100%;
    height: auto;
  }
  .main_area{
    margin: 0 auto;
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    padding: 70px 15px 0;
  }
  .main_area h1{
    font-size: 30px;
    color: #a8d039;
    font-family: 'Fjalla One',Helvetica,Arial,sans-serif;
  }
  .main_area p{
    margin-bottom: 95px;
  }
  .mce-response{
  background: #a8d039;
  overflow: hidden;
  margin: 10px 0;
  padding: 10px;
  border-radius: 4px;
  }
  .signup_area h3{
    margin: 10px 0 25px;
  }
  .form_area {
  background: #272727;
  padding: 15px;
  }
  .form_area form{
    padding-top: 0;
  }
  .form_area form .btn {
    margin:0 0 0 10px;
    color: #fff;
    background: #a8d039;
  }
      .form_area .input-group .form-control:first-child{
      border-radius: 4px;
  }