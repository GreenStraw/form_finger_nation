
body {
   margin-top: 30px;
}

.where-my-fans {
    display: block;
    font-family: 'TradeGothicLTStdBdCnNo.20', sans-serif;
    font-size: 50px;
    line-height: 1;
    letter-spacing: -0.02em;
    text-transform: uppercase;
    color: #98c72b ;
    text-align: center;
    margin-bottom: 15px;
}

.subtitle {
  color: gray;
  font-size: 150%;
  letter-spacing: 0.04em;
}

#left, #right {
    width: 100%;
    line-height: 33px;
    color: #d6d6d6 ;
}

#left {
  text-align: right;
}
#right {
  text-align: left;
}


.logo-container {
  display: block;
  margin: 0 auto;
  width: 100%;
}

#hero-logo {
  margin: 0 auto;
  display: block;
  max-width: 100%;
  height: auto;
  width: auto\9; /* ie8 */
}

.hero-paragraph {
  font-size: 160%;
  color: white;
  letter-spacing: 0.03em;
  margin-top: 15px;
  text-transform: none;
  margin-bottom: 0;
}

.home-page-list {
  display: block;
  margin: 30px;
}

.sounds-awesome {
  font-size: 1.5em;
  font-weight: bold;
  display: block;
  text-align: center;

}

#intro {
  height: 50px;
}

.intro-container {
  margin-top: 200px;
}

#app-screenshot {
  display: block;
  margin: 0 auto;
  max-width: 210px;
}

.explanation-container .fa {
  font-size: 2em;
  text-align: center;
  display: block;
  margin-bottom: 15px;
}

.explanation-container p {
  font-size: 1.3em;
}

.explainer-container {
  padding: 30px 0;
  background-color: lightgray;
  margin: 70px auto;
}

.explainer-wrapper {
  margin-top: -500px;
}

.explainer-title {
    text-align: center;
    margin-bottom: 10px;
}

#mce-error-response, #mce-success-response {
  font-size: 1.3em;
  font-style: italic;
}

#mce-error-response {
  color: #ff6666;
}

#mce-success-response {
  color: #8dae3f
}

.explainer-title-rule {
  margin-bottom: 20px;
  max-width: 800px;
}

.explainer-paragraph {
  margin: 0 50px;
  font-size: 1.3em;
}

.explainer-image {
    margin: 0 auto;
    display: block;
    max-width: 200px;
}

.hero-container {
  margin-top: 40px;
}

.hero-quote {
  font-style: italic;
  margin-top: 40px;
}

.green-text {
 color: #B1DA4F;
 font-size: large;
 font-weight: bold;
 line-height: 1.3em;
 font-size: 1.2em;
}

.button-container {
  margin-top: 50px;
  width: 310px;
  margin: 0 auto;
}

.apple-download-button, .android-download-button {
  display: inline-block;
  margin: 0 auto;
  max-width: 150px;
}

.bg {
  background: url( <%= asset_path("ffn_background.jpg") %>) center center;
  position: fixed;
  width: 100%;
  height: 850px; /*same height as jumbotron */
  top:0;
  left:0;
  z-index: -1;
}

.jumbotron {
  height: 850px; /*same height as bg*/
  color: white;
  text-shadow: #444 0 1px 1px;
  background-color: transparent;
  margin-top: -15px;
}

#large-centered-green-text {
  text-align: center;
  font-size: 4em;
  color: #B1DA4F;
  margin-top: 0;
}

.testimonial-container {
  margin: 40px 10px;
}

.testimonial-container .fa {
  color: gray;
}

.testimonial {
  margin-top: 20px;
}

.green-btn, .green-btn-wide {
  color: #FFFFFF;
  background-color: #98C72B;
  border-color: #7CA312;
  display: block;
  margin: 0 auto;
  width: 170px;
  margin-top: 35px;
  height: 40px;
  font-size: large;
  vertical-align: middle;
  position: relative;
  z-index: 999;
}

.green-btn-wide {
  width: 310px;
  margin-top: 20px;
  margin-bottom: 20px;
}

.glyphicon-chevron-up {
  font-size: small;
  position:relative; 
  top:-8px;
}

.green-btn:hover,
.green-btn:focus,
.green-btn:active,
.green-btn.active,
.open .dropdown-toggle.green-btn {
  color: #FFFFFF;
  background-color: #8AB509;
  border-color: #7CA312;
}

.green-btn:active,
.green-btn.active,
.open .dropdown-toggle.green-btn {
  background-image: none;
}

.green-btn.disabled,
.green-btn[disabled],
fieldset[disabled] .green-btn,
.green-btn.disabled:hover,
.green-btn[disabled]:hover,
fieldset[disabled] .green-btn:hover,
.green-btn.disabled:focus,
.green-btn[disabled]:focus,
fieldset[disabled] .green-btn:focus,
.green-btn.disabled:active,
.green-btn[disabled]:active,
fieldset[disabled] .green-btn:active,
.green-btn.disabled.active,
.green-btn[disabled].active,
fieldset[disabled] .green-btn.active {
  background-color: #98C72B;
  border-color: #7CA312;
}

.green-btn .badge {
  color: #98C72B;
  background-color: #FFFFFF;
}

@media(max-width:767px){
  .hero-quote {
  display: none;
  }

  .navbar-brand {
    display: none;
  }

  #app-screenshot {
    display: none;
  }

  #video-player {
    width: 400px;
    display: block;
    margin: 0 auto;
  }

  .testimonial {
  margin-top: 20px;
  display: block;
  text-align: center;
  }

  .explainer-image {
  display: none;
  }
}

@media(max-width:991px){
  .explainer-image {
    display: none;
  }
}
