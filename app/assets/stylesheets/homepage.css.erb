#video_title {
  text-align: center;
  font-size: 2em;
  color: #98C72B;
  margin-bottom: 25px;
}

.input-group {
  margin-top: 5px;
}

#video_player {
  width: 700px;
  display: block;
  margin: 0 auto;
}

.testimonial_container {
  margin: 40px 10px;
}

.testimonial_container .fa {
  color: gray;
}

.testimonial {
  margin-top: 20px;
}

.email_signup_form {
  display: inline-block;
}

.green-btn, .green-btn-wide { 
  color: #FFFFFF; 
  background-color: #98C72B; 
  border-color: #7CA312; 
  display: block;
  margin: 0 auto;
  width: 170px;
  margin-top: 35px;
  height: 40px;
  font-size: large;
  vertical-align: middle;
}

.green-btn-wide {
  width: 400px;
  margin-top: 20px;
  margin-bottom: 20px;
}
 
.green-btn:hover, 
.green-btn:focus, 
.green-btn:active, 
.green-btn.active, 
.open .dropdown-toggle.green-btn { 
  color: #FFFFFF; 
  background-color: #8AB509; 
  border-color: #7CA312; 
} 
 
.green-btn:active, 
.green-btn.active, 
.open .dropdown-toggle.green-btn { 
  background-image: none; 
} 
 
.green-btn.disabled, 
.green-btn[disabled], 
fieldset[disabled] .green-btn, 
.green-btn.disabled:hover, 
.green-btn[disabled]:hover, 
fieldset[disabled] .green-btn:hover, 
.green-btn.disabled:focus, 
.green-btn[disabled]:focus, 
fieldset[disabled] .green-btn:focus, 
.green-btn.disabled:active, 
.green-btn[disabled]:active, 
fieldset[disabled] .green-btn:active, 
.green-btn.disabled.active, 
.green-btn[disabled].active, 
fieldset[disabled] .green-btn.active { 
  background-color: #98C72B; 
  border-color: #7CA312; 
} 
 
.green-btn .badge { 
  color: #98C72B; 
  background-color: #FFFFFF; 
}

@media(max-width:767px){
  .hero_quote { 
  display: none;
  }

  #app_screenshot {
    display: none;
  }
  .apple_download_button, .android_download_button {
  margin-top: 10px;
  max-width: 200px;
  }
  #video_player {
    width: 400px;
    display: block;
    margin: 0 auto;
  }
  
  .testimonial {
  margin-top: 20px;
  display: block;
  text-align: center;
  }

  .explainer-image {
  display: none;
  }
}

@media(max-width:991px){
  .explainer-image {
    display: none;
  }
}
