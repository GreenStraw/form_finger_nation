}

.email-signup-form {
  display: inline-block;
}

.green-btn, .green-btn-wide { 
  color: #FFFFFF; 
  background-color: #98C72B; 
  border-color: #7CA312; 
  display: block;
  margin: 0 auto;
  width: 170px;
  margin-top: 35px;
  height: 40px;
  font-size: large;
  vertical-align: middle;
}

.green-btn-wide {
  width: 400px;
  margin-top: 20px;
  margin-bottom: 20px;
}
 
.green-btn:hover, 
.green-btn:focus, 
.green-btn:active, 
.green-btn.active, 
.open .dropdown-toggle.green-btn { 
  color: #FFFFFF; 
  background-color: #8AB509; 
  border-color: #7CA312; 
} 
 
.green-btn:active, 
.green-btn.active, 
.open .dropdown-toggle.green-btn { 
  background-image: none; 
} 
 
.green-btn.disabled, 
.green-btn[disabled], 
fieldset[disabled] .green-btn, 
.green-btn.disabled:hover, 
.green-btn[disabled]:hover, 
fieldset[disabled] .green-btn:hover, 
.green-btn.disabled:focus, 
.green-btn[disabled]:focus, 
fieldset[disabled] .green-btn:focus, 
.green-btn.disabled:active, 
.green-btn[disabled]:active, 
fieldset[disabled] .green-btn:active, 
.green-btn.disabled.active, 
.green-btn[disabled].active, 
fieldset[disabled] .green-btn.active { 
  background-color: #98C72B; 
  border-color: #7CA312; 
} 
 
.green-btn .badge { 
  color: #98C72B; 
  background-color: #FFFFFF; 
}

