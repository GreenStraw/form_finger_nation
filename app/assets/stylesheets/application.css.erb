  position: fixed;
  z-index: 1000;
  left: 50%;
  top: 47%;
}

.cursor{
  cursor: pointer;
}
#party_scheduled_for_1i,
#party_scheduled_for_2i,
#party_scheduled_for_3i,
#party_scheduled_for_4i,
#party_scheduled_for_5i{
  border-radius: 0;
  height: 45px;
  width: auto;
  margin: 0 2px 0 0;
  box-shadow: inset 0 1px 1px rgba(0,0,0,0.075);
  border: 1px solid #ccc;
  background-color: #fff;
}
.date_area .form-control {
  border-radius: 0;
  height: 45px;
  width: auto;
  float: left;
  margin: 0 2px 0 0;
}
.sport_header .sport_caption{
  position: relative;
}
.verifie_box{
   background-color: #337ab7;
  float: left;
  padding: 4px;
  border-radius: 4px;
  margin: 2px 5px 5px 0px;
  color: white;
}
.verified h2{
  float: left;
}
#available-packages h3{
  margin-left: -31px;
}
.verifie_caption { 
  position: absolute;
  top: 30px;
  left: 30px;
  color: #fff;
  background-color: #337ab7;
  padding: 2px 5px;
}
.verifie_caption .image-holder{
  width: 22px;
  height: 30px;
  margin: 0 auto;
}
.verifie_list li{
  position: relative;
  margin: 0 0 15px;
}
.verifie_list li .verifie_caption {
  position: absolute;
  top: 0;
  left: 100%;
  color: #fff;
  background-color: #a8d039;
  padding: 2px 5px;
  width: 60px;
  margin:0 5px;
}