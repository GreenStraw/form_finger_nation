 /* Move down content because we have a fixed navbar that is 50px tall */
 body {
   padding-top: 50px;
   padding-bottom: 20px;
 }

form {
  padding-top: 30px;
}

#message-div {
  display: none;
}

.static-height-wrapper {
  min-height: 80px;
  margin-top: 20px;
}

#message-div.affix-top {
  margin: 0 auto;
}

.message-div-wrapper.affix {
    top:0;
    z-index: 999;
    display: block;
}

#alert-message-text {
  margin: 0 auto;
}


 /* Override Rail's default error calls with Bootstrap 3 */
 .field_with_errors {
   @extend .has-error;
 }

.container {
  padding-top: 10px;
  background: white;
}

.details-container {
  margin: 20px;
}

.transparent {
  background-color: transparent;
}

 div.alert{
   margin: 10px;
 }
 form div.alert{
   margin:0px;
 }
 div.alert h2 {
   margin-top: 5px;
 }

 div#totals-breakdown{
	 float:left;
	 width:20%;
	 padding:20px;
 }

 div#search{
	 float:left;
	 width:80%;
	 padding: 10px;
 }

 div#search table td{
	 padding:5px;
 }

.bg-static {
  background: url( <%= asset_path("ffn_background.jpg") %>) center center;
  position: fixed;
  width: 120%;
  height: 100%;
  top:0;
  left:0;
  z-index: -1;
}

#map {
  width: 300px;
  height: 200px;
  padding-left: 50px;
}

@media(max-width:767px){
  #map {
    display: none;
  }
}
@media(min-width:991px){
  #map {
    width: 600px;
    height: 400px;
  }
}
